#!/bin/bash

echo Cursor Themes Backed Up
cp -r ~/.icons ~/RICE/Themes/

echo GTK Themes Backed Up
cp -r ~/.themes ~/RICE/Themes/

echo Xorg Startup Backed Up
cp ~/.xinitrc ~/RICE/Configs/Xorg/

echo ZSH Config Backed Up
cp ~/.zshrc ~/RICE/Configs/zsh/

echo Fonts Backed Up
cp -r ~/.local/share/fonts ~/RICE/Themes/fonts

echo Deluge Config Backed Up
cp -r ~/.config/deluge/* ~/RICE/Configs/Deluge

echo Backed Up i3 Config
cp ~/.config/i3/config ~/RICE/Configs/i3

echo Backed Up Polybar Config
cp ~/.config/polybar/config ~/RICE/Configs/polybar

echo Backed Up .Xresources
cp ~/.Xresources ~/RICE/Configs/Xresources

echo Backed up .mpd
cp -r ~/.mpd ~/RICE/Configs/mpd

echo NCMPCPP Backed Up
cp -r ~/.ncmpcpp ~/RICE/Configs/ncmpcpp

echo Ranger Config Backed Up
cp -r ~/.config/ranger ~/RICE/Configs/ranger
